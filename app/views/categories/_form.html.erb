<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br />
    <%= f.select 'parent_id', Category.all.collect {|p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <div class="k_on_off"><%= f.check_box :active, :id => "active" %><label for="active"></label></div>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </div>
  <div class="k_toolbar_button">
    <%= link_to "<button type='button' class='k_button_red'>Cancel</button>".html_safe, :back %>
    <%= f.submit :class => 'k_button_green' %>
  </div>  

<% end %>
