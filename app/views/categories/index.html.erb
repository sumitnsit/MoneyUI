<div class="k_form">
  <div class="border">
    <div class="inner_border">
        <div class="sub_title">Categories</div>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th>Active</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.parent.name if category.parent %></td>
    <td><%= category.active %></td>
    <td><%= category.note %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

        <div class="k_toolbar_button">
            <%= button_to "New Category", { :action => "new" }, :method => :get, :class => "k_button_green" %>
        </div>
    </div>
  </div>
</div>
