<%= form_for(@transfer) do |f| %>
  <% if @transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>

      <ul>
      <% @transfer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date, :type => "date", :value => Time.now.strftime("%Y-%m-%d") %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :from_account_id %><br />
    <!-- <%= f.number_field :from_account_id %> -->
    <%= f.select 'from_account_id', Account.all.collect {|p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :to_account_id %><br />
    <%= f.select 'to_account_id', Account.all.collect {|p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => "3"%>
  </div>
  <div class="k_toolbar_button">
    <%= link_to "<button type='button' class='k_button_red'>Cancel</button>".html_safe, :back %>
    <%= f.submit :class => 'k_button_green' %>
  </div>  

<% end %>
