<div class="k_form">
  <div class="border">
    <div class="inner_border">
        <div class="sub_title">Transactions</div>

<table>
  <tr>
    <th>Date</th>
    <th>Amount</th>
    <th>From account</th>
    <th>To account</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transfers.each do |transfer| %>
  <tr>
    <td><%= transfer.date %></td>
    <td><%= transfer.amount %></td>
    <td><%= transfer.from.name if transfer.from %></td>
    <td><%= transfer.to.name if transfer.to %></td>
    <td><%= transfer.note %></td>
    <td><%= link_to 'Show', transfer %></td>
    <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
    <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
        <div class="k_toolbar_button">
            <%= button_to "New Transaction", { :action => "new" }, :method => :get, :class => "k_button_green" %>
        </div>
    </div>
  </div>
</div>