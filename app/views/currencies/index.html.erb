<div class="k_form">
  <div class="border">
    <div class="inner_border">
        <div class="sub_title">Currencies</div>

<table>
  <tr>
    <th>Name</th>
    <th>Symbol</th>
    <th>Exchange rate</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.name %></td>
    <td><%= currency.symbol.html_safe %></td>
    <td><%= currency.exchange_rate %></td>
    <td>
      <% if currency.active %>
          <div class="k_dot_green"></div>
      <% else %>
          <div class="k_dot_red"></div>
      <% end %>      
    </td>    
    <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_currency_path(currency) %></td>
    <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, currency, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
  </tr>
<% end %>
</table>

        <div class="k_toolbar_button">
            <%= button_to "New Currency", { :action => "new" }, :method => :get, :class => "k_button_green" %>
        </div>
    </div>
  </div>
</div>